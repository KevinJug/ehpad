@model IEnumerable<ehpad.ORM.Vaccine>

@{
    ViewData["Title"] = "Index";
}

<div class="second-main-bg">
    <h1>Vaccins</h1>

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Lot)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Drug)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Brand)
                </th>
                <th class="align-right">
                    <a asp-action="Create"><img src="~/image/ajouter.png" alt="ajouter" width="30" height="30" /></a>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Lot)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Drug.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Brand.Name)
                    </td>
                    <td class="align-right">
                        <a asp-action="Edit" asp-route-id="@item.Id"><img src="~/image/modifier.png" alt="modifier" width="30" height="30" /></a>
                        <a asp-action="Details" asp-route-id="@item.Id"><img src="~/image/visible.png" alt="detail" width="30" height="30" /></a>
                        <a asp-action="Delete" asp-route-id="@item.Id"><img src="~/image/supprimer.png" alt="supprimer" width="30" height="30" /></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>