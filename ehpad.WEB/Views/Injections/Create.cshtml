@model ehpad.ORM.Injection

@{
    ViewData["Title"] = "Ajouter";
}

<div class="second-main-bg">
    <h1>Ajouter</h1>

    <h4>Injection <a asp-action="Index"><img src="~/image/arriere.png" alt="page index" width="30" height="30" /></a></h4>
    <hr />
    <div class="row">
        <div class="col-md-12">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="col-md-12 container-row-wrap">
                    <div class="form-group col-md-5">
                        <label asp-for="VaccineDate" class="control-label"></label>
                        <input asp-for="VaccineDate" class="form-control" />
                        <span asp-validation-for="VaccineDate" class="text-danger"></span>
                    </div>
                    <div class="form-group offset-md-2 col-md-5">
                        <label asp-for="ReminderDate" class="control-label"></label>
                        <input asp-for="ReminderDate" class="form-control" />
                        <span asp-validation-for="ReminderDate" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-5">
                        <label asp-for="VaccineId" class="control-label"></label>
                        <select asp-for="VaccineId" class="form-control" asp-items="ViewBag.VaccineId"></select>
                        <span asp-validation-for="VaccineId" class="text-danger"></span>
                    </div>
                    <div class="form-group offset-md-2 col-md-5">
                        <label asp-for="PeopleId" class="control-label"></label>
                        <select asp-for="PeopleId" class="form-control" asp-items="ViewBag.PeopleId"></select>
                        <span asp-validation-for="PeopleId" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-12 container-row-wrap">
                    <div class="form-group col-md-3">
                        <input type="submit" value="Ajouter" class="btn btn-primary" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
