@model ehpad.ORM.People

@{
    ViewData["Title"] = "Create";
}

<div class="second-main-bg">
    <h1>Create</h1>

    <h4>People <a asp-action="Index"><img src="~/image/arriere.png" alt="page index" width="30" height="30" /></a></h4>
    <hr />
    <div class="row">
        <div class="col-md-12">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="col-md-12 container-row-wrap">
                    <div class="form-group col-md-5">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group offset-md-2 col-md-5">
                        <label asp-for="Firstname" class="control-label"></label>
                        <input asp-for="Firstname" class="form-control" />
                        <span asp-validation-for="Firstname" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-5">
                        <label asp-for="Sex" class="control-label"></label>
                        <div>
                            <input asp-for="Sex" type="radio" value="Homme" checked /> Homme
                        </div>
                        <div>
                            <input asp-for="Sex" type="radio" value="Femme" /> Femme
                        </div>
                        <span asp-validation-for="Sex" class="text-danger"></span>
                    </div>
                    <div class="form-group offset-md-2 col-md-5">
                        <label asp-for="Condition" class="control-label"></label>
                        <div>
                            <input asp-for="Condition" type="radio" value="Résident" checked /> Résident
                        </div>
                        <div>
                            <input asp-for="Condition" type="radio" value="Personnel" /> Personnel
                        </div>
                        <span asp-validation-for="Condition" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-5">
                        <label asp-for="Birth" class="control-label"></label>
                        <input asp-for="Birth" class="form-control" />
                        <span asp-validation-for="Birth" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-12 container-row-wrap">
                    <div class="form-group col-md-3">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
