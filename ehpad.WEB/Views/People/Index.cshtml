@model IEnumerable<ehpad.ORM.People>

@{
    ViewData["Title"] = "Index";
}

<div class="second-main-bg">
    <h1>Personnes</h1>

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Firstname)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Sex)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Birth)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Condition)
                </th>
                <th class="align-right">
                    <a asp-action="Create"><img src="~/image/ajouter.png" alt="ajouter" width="30" height="30" /></a>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Firstname)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Sex)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Birth)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Condition)
                    </td>
                    <td class="align-right">
                        <a asp-action="Edit" asp-route-id="@item.Id"><img src="~/image/modifier.png" alt="modifier" width="30" height="30" /></a>
                        <a asp-action="Details" asp-route-id="@item.Id"><img src="~/image/visible.png" alt="detail" width="30" height="30" /></a>
                        <a asp-action="Delete" asp-route-id="@item.Id"><img src="~/image/supprimer.png" alt="supprimer" width="30" height="30" /></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>