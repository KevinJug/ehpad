<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ehpad.WEB</title>
    <link rel="icon" type="image/png" href="~/favicon.png" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3 menu">
            <div class="container">
                <a class="navbar-brand white" asp-area="" asp-controller="Filter" asp-action="Index">GESTI'PAD</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul id="navMain" class="navbar-nav flex-grow-1">
                        <li class="nav-item filters">
                            <a class="white" asp-area="" asp-controller="Filter" asp-action="Index">Filtre</a>
                        </li>
                        <li class="nav-item brands">
                            <a class="white" asp-area="" asp-controller="Brands" asp-action="Index">Marque</a>
                        </li>
                        <li class="nav-item drugs">
                            <a class="white" asp-area="" asp-controller="Drugs" asp-action="Index">Médicament</a>
                        </li>
                        <li class="nav-item vaccines">
                            <a class="white" asp-area="" asp-controller="Vaccines" asp-action="Index">Vaccin</a>
                        </li>
                        <li class="nav-item peoples">
                            <a class="white" asp-area="" asp-controller="People" asp-action="Index">Personne</a>
                        </li>
                        <li class="nav-item injections">
                            <a class="white" asp-area="" asp-controller="Injections" asp-action="Index">Injection</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container padding">
        <main role="main" class="main_bg">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
