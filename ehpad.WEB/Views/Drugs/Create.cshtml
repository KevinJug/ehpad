@model ehpad.ORM.Drug

@{
    ViewData["Title"] = "Ajouter";
}

<div class="second-main-bg">
    <h1>Ajouter</h1>

    <h4>Médicament <a asp-action="Index"><img src="~/image/arriere.png" alt="page index" width="30" height="30" /></a></h4>
    <hr />
    <div class="row">
        <div class="col-md-12">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="col-md-12 container-row-wrap">
                    <div class="form-group col-md-5">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-12 container-row-wrap">
                    <div class="form-group col-md-3">
                        <input type="submit" value="Ajouter" class="btn btn-primary" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
